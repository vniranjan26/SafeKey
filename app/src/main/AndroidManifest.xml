<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.safekey">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SafeKey">
        <activity android:name=".SplashScreen"></activity>
        <activity android:name=".Edit_Card" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".Auth" />
        <activity android:name=".Add" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".Recovery" />
        <activity android:name=".OtpActivity"
            android:windowSoftInputMode="stateVisible"/>
        <activity android:name=".SignupActivity" />
        <activity android:name=".onBoarding">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>